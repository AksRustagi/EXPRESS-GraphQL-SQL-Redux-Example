{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "strict": true,
    "outDir": "./Compiled/",
    "skipLibCheck": true,
    "types": [
      "mocha",
      "node",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
